<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="SystemLogPath" value="D:\Logs\WcfDamit"/>
  </appSettings>
  <connectionStrings>
    <add name="Database" connectionString="User ID=sa; Password=Administrator1; Initial Catalog=Damit;Data Source=.\Sql_2k8R2"/>
  </connectionStrings>
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
  </system.web>
  <system.serviceModel>
    <services>
      <service name="DataObject_Wcf.WcfService">
        <endpoint
          address="http://DataObjects_Wcf/WcfService"
          binding="webHttpBinding"
          contract="DataObjects_Framework.DataAccess.Interface_WcfService"
          behaviorConfiguration="web"/>
      </service>
    </services>
    <behaviors>
      <endpointBehaviors>
        <behavior name="web">
          <webHttp defaultOutgoingResponseFormat="Json" />
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <extensions>
      <behaviorExtensions>
        <add name="ErrorLogging" type="ErrorHandlerBehavior"/>
      </behaviorExtensions>
    </extensions>
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>
</configuration>
